<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.gpa_calculator.TableDBController">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">


            <TableView fx:id="courseTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="codeCol" text="Code" prefWidth="80"/>
                    <TableColumn fx:id="titleCol" text="Title" prefWidth="150"/>
                    <TableColumn fx:id="creditCol" text="Credit" prefWidth="60"/>
                    <TableColumn fx:id="teacher1Col" text="Teacher 1" prefWidth="100"/>
                    <TableColumn fx:id="teacher2Col" text="Teacher 2" prefWidth="100"/>
                    <TableColumn fx:id="gradeCol" text="Grade" prefWidth="60"/>
                </columns>
            </TableView>


            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <Label text="Code:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="codeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Title:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="titleField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Credit:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="creditField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Teacher 1:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="teacher1Field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Teacher 2:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="teacher2Field" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Grade:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="gradeField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>


            <HBox spacing="10">
                <Button text="Add" onAction="#onAddClicked" fx:id="addBtn" />
                <Button text="Update" onAction="#onUpdateClicked" fx:id="updateBtn"/>
                <Button text="Delete" onAction="#onDeleteClicked" fx:id="deleteBtn"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
